<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_below_divider_text_view"
        android:paddingLeft="@dimen/padding_below_divider_text_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberTextView"
            android:paddingTop="@dimen/padding_above_and_below_text"
            android:paddingLeft="@dimen/padding_below_divider_text_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/idTextView"
            android:paddingBottom="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/titleTextView"
            android:paddingBottom="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/dividerTextView"
            android:background="@color/accent_material_dark"
            android:paddingBottom="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view"
            android:paddingRight="@dimen/padding_below_divider_text_view" />

    </LinearLayout>
</LinearLayout>